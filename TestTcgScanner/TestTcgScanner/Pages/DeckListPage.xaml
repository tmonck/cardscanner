<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestTcgScanner.Pages.DeckListPage"
             BackgroundColor="DarkGrey">
    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <Grid RowSpacing="25" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">
            <Button Text="Add a Card"
                    Grid.Row="1"
                    Clicked="OnAddCardButtonClicked"
                    HorizontalOptions="Center" />
        </Grid>
    </ScrollView>
</ContentPage>
