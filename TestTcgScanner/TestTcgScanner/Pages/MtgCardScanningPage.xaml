<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestTcgScanner.Pages.MtgCardScanningPage"
             xmlns:cv="clr-namespace:TestTcgScanner.Views.CameraView"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout >
        <cv:CameraCardReaderView x:Name="cameraView"
                                 VerticalOptions="Fill"
                                 HorizontalOptions="Fill"
                                 CameraLocation="Rear"
                                 IsTorchOn="True"
                                 Visual="Material"
                                 >
            
        </cv:CameraCardReaderView>
    </StackLayout>
</ContentPage>
